{
    "compilerOptions": {
		"module": "NodeNext",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "build",
    },
    "include": ["**/src/**.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "build"]
}